@model FlightBookingApp.Models.Flight

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Flight - Airline Booking</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~wwwroot/css/style1.css" rel="stylesheet">
    <style>
        header {
            background-color: #333;
            color: white;
            padding: 20px;
        }

        footer {
            background-color: #333;
            color: white;
            padding: 10px;
            text-align: right;
            position: fixed;
            bottom: 0;
            width: 100%;
            height: 100%;
        }

        .form-label {
            font-size: 15px;
            color: black;
        }

        .form-control {
            font-size: 10px;
            border-color: black;
            background-color: #ffffff; /*input background*/
            color: black; /*input text color*/
        }

        .btn-primary {
            font-size: 20px;
            padding: 10px 20px;
            background-color: goldenrod;
            border-color: steelblue;
        }

        #logout {
            float: right;
        }

        .card {
            border-radius: 30px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .abc {
            padding: 20px;
            background-color: goldenrod;
            border-radius: 30px 30px 0 0;
        }
    </style>
</head>
<body class="bg-light">
    <header>
        <nav>
            <a asp-controller="Admin" asp-action="Index"><b style="color:white ; text-decoration:none" ;>ADMIN DASHBOARD</b></a> - Create Flight

            &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
            <div id="logout">
                <a asp-controller="Admin" asp-action="login" class="btn btn-warning">Log Out</a>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="abc">
                        <h4 class="flightheader" style="color: black">Add Flight Details</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label for="AirLine" class="form-label">Airline</label>
                                <input asp-for="AirLine" class="form-control" placeholder="Enter Airline Name" required>
                                <span asp-validation-for="AirLine" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="From" class="form-label">From</label>
                                <input asp-for="From" class="form-control" required />
                                <span asp-validation-for="From" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="To" class="form-label">To</label>
                                <input asp-for="To" class="form-control" required />
                                <span asp-validation-for="To" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="DepartureDate" class="form-label">Departure Date</label>
                                <input asp-for="DepartureDate" class="form-control" min="@DateTime.Today.ToString("yyyy-MM-dd")" required />
                                <span asp-validation-for="DepartureDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="DepartureTime" class="form-label">Departure Time</label>
                                <input asp-for="DepartureTime" class="form-control" required />
                                <span asp-validation-for="DepartureTime" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="EconomySeats" class="form-label">Economy Seats</label>
                                <input asp-for="EconomySeats" class="form-control" min="0" max="300" required />
                                <span asp-validation-for="EconomySeats" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="AvailableEconomySeats" class="form-label">Available Economy Seats</label>
                                <input asp-for="AvailableEconomySeats" class="form-control" min="0" max="300" required />
                                <span asp-validation-for="AvailableEconomySeats" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="EconomyPrice" class="form-label">Economy Seats Price</label>
                                <input asp-for="EconomyPrice" class="form-control" required />
                                <span asp-validation-for="EconomyPrice" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="BusinessSeats" class="form-label">Business Seats</label>
                                <input asp-for="BusinessSeats" class="form-control" min="0" max="100" required />
                                <span asp-validation-for="BusinessSeats" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="AvailableBusinessSeats" class="form-label">Available Business Seats</label>
                                <input asp-for="AvailableBusinessSeats" class="form-control" min="0" max="100" required />
                                <span asp-validation-for="AvailableBusinessSeats" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="BusinessPrice" class="form-label">Business Seats Price</label>
                                <input asp-for="BusinessPrice" class="form-control" required />
                                <span asp-validation-for="BusinessPrice" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="NoOfStops" class="form-label">Number of Stops</label>
                                <input asp-for="NoOfStops" class="form-control"/>
                                <span asp-validation-for="NoOfStops" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="TripType">Trip Type:</label>
                                <br />
                                <input type="radio" id="OneWay" name="TripType" class="trip-type-option" value="OneWay">
                                <label for="OneWay">One Way</label>
                                <br />
                                <input type="radio" id="RoundTrip" name="TripType" class="trip-type-option" value="RoundTrip">
                                <label for="RoundTrip">Round Trip</label>
                                <br />

                                <input type="radio" id="MultiCity" name="TripType" class="trip-type-option" value="MultiCity">
                                <label for="MultiCity">Multi City</label>
                                <br>
                            </div>

                            <div class="form-group">
                                <label for="ArrivalDate" class="form-label">Arrival Date </label>
                                <input asp-for="ArrivalDate" class="form-control" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="ArrivalDate" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-12 text-center">
                                    <button type="submit" class="btn btn-primary" style="color: black">Create Flight</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (Optional) -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <div class="mt-3 text-center">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>


    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
    <br />
    <br />


    <footer style="position:relative" ;>
        
        <div style="text-align:left;">

            &copy; JX Travels All rights reserved

        </div>

    </footer>
</body>
</html>