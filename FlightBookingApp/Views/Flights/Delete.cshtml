@model FlightBookingApp.Models.Flight

@{
    ViewData["Title"] = "Delete";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="~/favicon2.ico" />

    <title>Delete</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        /* Add your custom CSS styles here */
        .container {
            margin-top: 50px; /* Add margin to the top */
            margin-bottom: 50px; /* Add margin to the bottom */
        }

        .card {
            border: 1px solid #ccc;
            background-color:aliceblue;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .btn-delete {
            margin-right: 10px;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <h3 class="text-center mb-4">Are you sure you want to delete this Flight?</h3>
                    <hr />
                    <dl class="row">
                        <!-- Display Flight details -->
                        <dt class="col-sm-5">@Html.DisplayNameFor(model => model.AirLine)</dt>
                        <dd class="col-sm-5">@Html.DisplayFor(model => model.AirLine)</dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.EconomySeats)
                        </dt>
                        <dd class="col-sm-5">
                            @Html.DisplayFor(model => model.EconomySeats)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.BusinessSeats)
                        </dt>
                        <dd class="col-sm-5">
                            @Html.DisplayFor(model => model.BusinessSeats)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.EconomyPrice)
                        </dt>
                        <dd class="col-sm-5">
                            @Html.DisplayFor(model => model.EconomyPrice)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.BusinessPrice)
                        </dt>
                        <dd class="col-sm-5">
                            @Html.DisplayFor(model => model.BusinessPrice)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.From)
                        </dt>
                        <dd class="col-sm-5">
                            @Html.DisplayFor(model => model.From)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.To)
                        </dt>
                        <dd class="col-sm-5">
                            @Html.DisplayFor(model => model.To)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.DepartureDate)
                        </dt>
                        <dd class="col-sm-5">
                            @Html.DisplayFor(model => model.DepartureDate)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.DepartureTime)
                        </dt>
                        <dd class="col-sm-5">
                            @Html.DisplayFor(model => model.DepartureTime)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.NoOfStops)
                        </dt>
                        <dd class="col-sm-5">
                            @Html.DisplayFor(model => model.NoOfStops)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.AvailableEconomySeats)
                        </dt>
                        <dd class="col-sm-5">
                            @Html.DisplayFor(model => model.AvailableEconomySeats)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.AvailableBusinessSeats)
                        </dt>
                        <dd class="col-sm-5">
                            @Html.DisplayFor(model => model.AvailableBusinessSeats)
                        </dd>
                    </dl>
                    <br/>


                    <form asp-action="DeleteConfirmed" asp-route-id="@Model.FlightId">
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                    </form>
                </div>
            </div>

</body>
</html>