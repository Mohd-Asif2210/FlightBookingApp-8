
@model IEnumerable<FlightBookingApp.Models.Flight>


<style>
    .table-header {
        color: lightseagreen;
        background-color: AliceBlue;
    }

    .table_items {
        color: black;
        background-color: antiquewhite;
    }

    .tex {
        font-family: 'Times New Roman', Times, serif;
        font-weight: bold;
    }

    .button {
        background-color: #ff4d4d;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        margin-bottom: 20px;
    }
</style>
<div class="container mt-4">
    <div class="tex">
        <h2>Available Flights</h2>
    </div>
    <br />
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-header">
                    <tr style="padding:10px; border:2px solid #090909">
                        <th style="padding:10px; border:2px solid #090909">Airline</th>
                        <th style="padding:10px; border:2px solid #090909">From</th>
                        <th style="padding:10px; border:2px solid #090909">To</th>
                        <th style="padding:10px; border:2px solid #090909">Departure   Date</th>
                        <th style="padding:10px; border:2px solid #090909">Departure Time</th>

                        <th style="padding:10px; border:2px solid #090909">Arrival   Date</th>


                        <th style="padding:10px; border:2px solid #090909">Available Economy Seats</th>
                        <th style="padding:10px; border:2px solid #090909">Economy Price</th>
                        <th style="padding:10px; border:2px solid #090909">Available Business Seats</th>
                        <th style="padding:10px; border:2px solid #090909">Business Price</th>
                        <th style="padding:10px; border:2px solid #090909">Book Flight</th>
                    </tr>
                </thead>
                <tbody class="table_items">
                    @foreach (var flight in Model)
                    {
                        <tr style="border:2px solid #090909">
                            <td style="padding:10px; border:2px solid #090909"><i class="bi bi-airplane"></i>@flight.AirLine</td>
                            <td style="padding:10px; border:2px solid #090909">@flight.From</td>
                            <td style="padding:10px; border:2px solid #090909">@flight.To</td>
                            <td style="padding:10px; border:2px solid #090909">@(flight.DepartureDate.ToShortDateString())</td>
                            <td style="padding:10px; border:2px solid #090909">@(flight.DepartureTime.ToShortTimeString())</td>
                            <td style="padding:10px; border:2px solid #090909">@(flight.ArrivalDate?.ToShortDateString())</td>
                            <td style="padding:10px; border:2px solid #090909">@flight.AvailableEconomySeats</td>
                            <td style="padding:10px; border:2px solid #090909">₹ @flight.EconomyPrice</td>
                            <td style="padding:10px; border:2px solid #090909">@flight.AvailableBusinessSeats</td>
                            <td style="padding:10px; border:2px solid #090909">₹ @flight.BusinessPrice</td>
                            <td style="padding:10px; border:2px solid #090909">
                                <a href="@Url.Action("Book", "Booking", new { flightId = flight.FlightId })" class="btn btn-danger">Book</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="tex">
            <p>All flights booked on this day for the selected route Please select Another day.</p>
        </div>
    }
</div>