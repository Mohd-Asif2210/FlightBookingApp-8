
@model FlightBookingApp.ViewModels.BookingViewModel
<style>
    /* body {
        font-family: Arial, sans-serif;
        background-color: aliceblue;
        color: navy;
        margin: 0;
        padding: 0;
    } */

    .form-group {
        margin-bottom: 20px;
    }

    .custom-select {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border-radius: 5px;
        border: 1px solid navy;
    }

    .btn {
        padding: 10px 20px;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        background-color: navy;
        color: aliceblue;
        cursor: pointer;
    }

        .btn:hover {
            background-color: aliceblue;
            color: navy;
        }

    .wrapper {
        background-color: #fff;
        width: 600px;
        padding: 25px;
        margin: 25px auto 0;
        border-radius: 10px;
    }

        .wrapper h5 {
            padding-bottom: 5px;
            color: black;
        }

    .just {
        background-color: goldenrod;
        padding: 10px;
        border-radius: 5px 5px 0 0;
    }

    .seat-type-option {
        display: none;
    }

        .seat-type-option + label {
            padding: 12px 20px; /* Increased padding and width for larger size */
            border: 2px solid transparent; /* Transparent border initially */
            background-color: #f0f0f0; /* Default background color for unselected options */
            color: #333; /* Text color */
            cursor: pointer;
            transition: all 0.3s ease; /* Transition for all properties */
            text-align: center; /* Center-align text */
            border-radius: 5px; /* Rounded corners for a softer look */
        }

        .seat-type-option:checked + label {
            background: navy;
            border-color: #dfdff5;
            color: #fff; /* Text color when selected */
        }

        .seat-type-option:hover + label {
            background-color: #e0e0e0; /* Lighter background on hover */
            color: #000; /* Text color on hover */
        }

</style>

<form asp-controller="Booking" asp-action="Book" method="post" class="mt-4">
    <div class="form-group">
        <label for="SeatType" class="font-weight-bold" style="font-weight:bold">Seat Type:</label>
        <input type="radio" id="Economy" name="SeatType" class="seat-type-option" value="Economy" checked>
        <label for="Economy">Economy</label>

        <input type="radio" id="Business" name="SeatType" class="seat-type-option" value="Business">
        <label for="Business">Business</label>
        <br>
    </div>








    <input type="hidden" asp-for="FlightId" />
    <div class="form-group">
        <label for="NumberOfPassengers" style="font-weight:bold" >Enter No of Passengers:</label>
        <input type="number" class="form-control" id="NumberOfPassengers" name="NumberOfPassengers" placeholder="Please enter atleast 1 passenger" min="1" max="15" value=0 required />
    </div>

    <div id="passengerDetailsContainer" class="mt-3"></div>



    <p style="text-align:center;"> <button type="submit" class="btn btn-success">Book Flight</button></p>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#NumberOfPassengers').on('input', function () {
                var numPassengers = $(this).val();
                var passengerDetailsContainer = $('#passengerDetailsContainer');
                passengerDetailsContainer.empty();

                for (var i = 0; i < numPassengers; i++) {
                    var passengerDetails = `
                <div class="wrapper">
                <div class="card mb-3">
                <div class="just">
                        <h5 class="card-title mb-0" style="font-weight:bolder;font-family:Cambria, Cochin, Georgia, Times, 'Times New Roman', serif">Passenger ${i + 1} Details</h5>
                </div>
                <div class="card-body" style="background-color:aliceblue;">
                <div class="form-group">
                <label for="PassengerName${i}" >Name:</label>
                <input type="text" class="form-control" id="PassengerName${i}" name="PassengerName[${i}]" required />
                </div>
                <div class="form-group">
                <label for="PassengerAge${i}">Age:</label>
                <input type="number" class="form-control" id="PassengerAge${i}" name="PassengerAge[${i}]" required />
                </div>
                <div class="form-group">
                    <label for="PassengerGender${i}">Gender:</label>
                    <select class="form-control" id="PassengerGender${i}" name="PassengerGender[${i}]" required>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                    </select>
                </div>

                </div>
                </div>
                        </div>                      `;
                    passengerDetailsContainer.append(passengerDetails);
                }
            });
        });
    </script>
}