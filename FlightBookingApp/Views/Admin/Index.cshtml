
@{
    ViewBag.Title = "Index";
    Layout = null;
}
<html lang="en">

<head>

    <meta charset="UTF-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Admin Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background-color: #1e1e1e;
            color: white;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            /* text-decoration:none; */
            font-size: 24px;
            font-weight: bold;
        }

        nav {
            display: flex;
        }

            nav a {
                color: white;
                text-decoration: none;
                margin: 0 20px;
                font-size: 16px;
            }

                nav a:hover {
                    text-decoration: underline;
                }

        #logout {
            margin-right: 40px;
            font-size: 16px;
        }

        section {
            text-align: center;
            margin-top: 100px;
        }

        footer {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background-color: #1e1e1e;
            color: white;
            padding: 10px;
            text-align: right;
        }

        .enlarge-on-hover:hover {
            transform: scale(1.2);
            transition: transform 0.3s ease;
        }

        section {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-left: -15px
        }

        .section-container {
            justify-content: center;
            align-items: center;
            height: 60vh;
        }

        .image-container {
            margin-right: 20px;
            display: inline-block;
            border: 2px solid white;
            padding: 30px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
            border-radius: 20px
        }
    </style>
</head>
<body>
    <header>
        <div class="logo">ADMIN DASHBOARD</div>
        <nav>
            <a asp-controller="Admin" asp-action="login" class="btn btn-warning" style="text-decoration:none">Log Out</a>
        </nav>
    </header>
    <br />
    <section class="section-container">
        <div>
            &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
            <div class="image-container">
                <a href="@Url.Action("Create", "Flights")">
                    <img src="/images/Addflight1.jpeg.jpg" alt="Add Flights" style="width:330px;height:230px;" class="enlarge-on-hover">
                    <br />
                    <br />
                    <br />
                    <div style="font-size: 20px; font-family: Arial, sans-serif;" class="btn btn-success">Add Flights</div>
                </a>
            </div>
        </div>
        <div>
            &emsp;&emsp;&emsp;&emsp;&emsp;
            <div class="image-container">
                <a href="@Url.Action("Index", "Flights")">
                    <img src="/images/viewflight1.jpeg.jpg" alt="View Flights" style="width:330px;height:230px;" class="enlarge-on-hover">
                    <br />
                    <br />
                    <br />
                    <div style="font-size: 20px; font-family: Arial, sans-serif;" class="btn btn-success">View Flights</div>
                </a>
            </div>
        </div>

    </section>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <br />
    <br />
    <footer class="footer">
        <div style="text-align:left;">
            &copy; JX Travels All rights reserved.
        </div>
    </footer>
</body>
</html>