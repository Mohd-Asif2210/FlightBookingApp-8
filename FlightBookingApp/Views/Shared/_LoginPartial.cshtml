@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <button class="logoutlink" type="submit">Logout</button>
                @* <button class="btn btn-primary" type="submit">Logout</button> *@
                </li>
                <li>
                <a class="hellologin" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
        </ul>
    </form>
}
else
{
    <div ="nav-item">
        @* <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a> *@
        <a class="registerlink" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </div>
    <div class="nav-item">
        <a class="loginlink" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </div>
}
