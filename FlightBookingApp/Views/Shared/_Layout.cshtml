<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] JX Travels</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    @* <link rel="stylesheet" href="~/FlightBookingApp.style.css" asp-append-version="true" /> *@
    <link rel="icon" type="image/x-icon" href="~/favicon1.ico" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="
https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
          integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css//hpstyle.css" />

</head>
<body>
    <header>
        <nav>
            @* <img src="~/images/jx-logo.jpg" style="height:50px; width:50px;">&emsp; *@
            <div class="nav__logo">
                <a class="link" asp-area="" asp-controller="Booking" asp-action="SearchForm">
                    <img src="~/images/jx-logo.jpg" style="height:25px; width:25px;">
                    JX TRAVELS
                </a>
            </div>
                <ul class="nav__links">
                <li class="link"><a asp-area="" asp-controller="Home" asp-action="AboutUs">About</a></li>
                <li class="link"><a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                <li class="link"><a asp-area="" asp-controller="Home" asp-action="Offers">Offers</a></li>
                <li class="link"><a asp-area="" asp-controller="Home" asp-action="Contactus">  Contact Us </a></li>
                    @* <li class="link">
                    <a asp-area="" asp-controller="Booking" asp-action="SearchForm">Search Flights</a>
                    </li> *@
                    <li class="link">
                        <a class="link" asp-area="" asp-controller="Booking" asp-action="BookingHistory">My Bookings</a>
                    </li>
                    <li class="link">
                        @* <a class="link" asp-area="" asp-controller="Admin" asp-action="login">Admin</a> *@
                        <a class="link" asp-area="" asp-controller="Home" asp-action="Careers">Careers</a>
                    </li>
                </ul>
            <partial name="_LoginPartial" />
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <style>
        .container {
            text-align: left;
        }
    </style>

    <footer class="footer">
        <div class="section__container footer__container">
            <div class="footer__col">
                <h3>JX TRAVEL AGENCY</h3>
                <p>
                    Where Excellence Takes Flight. With a strong commitment to customer
                    satisfaction and a passion for air travel, JX Travels offers
                    exceptional service and seamless journeys.
                </p>
                <p>
                    From friendly smiles to state-of-the-art aircraft, we connect the
                    world, ensuring safe, comfortable, and unforgettable experiences.
                </p>
            </div>
            <div class="footer__col">
                <h4>INFORMATION</h4>
                <a asp-area="" asp-controller="Booking" asp-action="SearchForm"> Home </a><br /><br />
                <a asp-area="" asp-controller="Home" asp-action="AboutUs">About</a><br /><br />
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a><br /><br />
                <a asp-area="" asp-controller="Home" asp-action="Contactus">  Contact Us </a><br /><br />
                
            </div>
            <div class="footer__col">
                <h4>HELP</h4>
                <a asp-area="" asp-controller="Home" asp-action="FAQ">FAQs</a><br /><br />
                <a asp-area="" asp-controller="Home" asp-action="Agreement">Terms & Conditions</a>
                
            </div>
        </div>
        <div class="section__container footer__bar">
            <p>Copyright © 2024 JX TRAVEL AGENCY. All rights reserved.</p>
            <div class="socials">
                <i class="fa-brands fa-facebook-f"></i>
                <i class="fa-brands fa-twitter"></i>
                <i class="fa-brands fa-instagram"></i>
                <i class="fa-brands fa-youtube"></i>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
